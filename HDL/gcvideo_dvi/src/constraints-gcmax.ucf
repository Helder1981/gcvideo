NET "DAC_Red[7]"   LOC = P36 | IOSTANDARD = LVCMOS33;

NET "DAC_Green[0]" LOC = P33 | IOSTANDARD = LVCMOS33;
NET "DAC_Green[1]" LOC = P34 | IOSTANDARD = LVCMOS33;
NET "DAC_Green[2]" LOC = P35 | IOSTANDARD = LVCMOS33;
NET "DAC_Green[3]" LOC = P32 | IOSTANDARD = LVCMOS33;
NET "DAC_Green[4]" LOC = P28 | IOSTANDARD = LVCMOS33;
