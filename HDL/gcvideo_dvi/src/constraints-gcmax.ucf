NET "VData[1]"     LOC = P68;
NET "VData[2]"     LOC = P71;
NET "VData[3]"     LOC = P65;
NET "VData[4]"     LOC = P64;
NET "VData[5]"     LOC = P61;
NET "VData[6]"     LOC = P62;
NET "VData[7]"     LOC = P60;
NET "VClockN"      LOC = P90;

# Controller
NET "PadData"      LOC = P39;

# IR Receiver
NET "IRReceiver"   LOC = P82;
NET "IRButton"     LOC = P21;

# Audio
NET "I2S_Data"     LOC = P56;
NET "I2S_LRClock"  LOC = P59;
NET "I2S_BClock"   LOC = P57;
NET "SPDIF_Out"    LOC = P3;

# LED
NET "LED"          LOC = P52 | IOSTANDARD = LVCMOS33;

# analog mode input
NET "ForceYPbPr"   LOC = P7 | IOSTANDARD = LVCMOS33 | PULLUP = TRUE;
